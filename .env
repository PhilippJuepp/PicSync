##########################################
# PicSync Environment Configuration
# ---------------------------------------
# Copy this file to `.env` and adjust values as needed.
# Default values are ready for local Docker setup.
##########################################

# === Server ===
APP_PORT=8080
APP_HOST=0.0.0.0

# === Database ===
DB_HOST=postgres
DB_PORT=5432
DB_USER=picsync
DB_PASSWORD=picsync
DB_NAME=picsync
DB_SSLMODE=disable

# === Storage ===
# Choose between: "local" or "minio"
STORAGE_DRIVER=local

# Local storage path (absolute path on the host machine)
# Example: /mnt/raid/picsync_data
LOCAL_STORAGE_PATH=/data/picsync

# MinIO configuration (used only if STORAGE_DRIVER=minio)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=picsync

# === Security ===
JWT_SECRET=#changeme

# === Timezone ===
TZ=Europe/Berlin